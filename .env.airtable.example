# Example Airtable and Gemini API configuration file
# Copy this file to .env.airtable and fill in your credentials

# Airtable Configuration
# Copy this file to .env.airtable and update with your credentials

# Airtable API Credentials
AIRTABLE_API_KEY="your_airtable_api_key_here"
AIRTABLE_BASE_ID="your_airtable_base_id_here"
AIRTABLE_TABLE_NAME="your_table_name_here"

# Airtable Field Mappings (customize to match your Airtable schema)
AIRTABLE_FRAME_ID_FIELD="FrameID"
AIRTABLE_FLAGGED_FIELD="Flagged"
AIRTABLE_OCR_DATA_FIELD="OCRData"
AIRTABLE_SYNC_TIMESTAMP_FIELD="LastSynced"

# Google Gemini API Credentials (for enhanced OCR text analysis)
GEMINI_API_KEY="your_gemini_api_key_here"

# API Rate Limiting (adjust if needed, default is conservative)
# Time in seconds to wait between Airtable API requests
AIRTABLE_RATE_LIMIT_SLEEP=0.25  # 250ms between requests (allows ~4 req/sec)

# Configuration Options
# Set to true to enable Airtable updates
ENABLE_AIRTABLE_UPDATES=true

# Set to true to use Google Gemini API for enhanced OCR text analysis
USE_GEMINI=true 